

<div class = "d-flex flex-column">
  <h2 class = "py-4">You are seeing players with at least <%=params[:query_seasons]%>  seasons in the DSL, sorted by <%=params[:sort]%></h2>
  <div>
    <%=render "form"%>
  </div>
 <!-- <div>
    <%=render "previous_season_form"%>
  </div> -->
<div id="players", class= "shadow rounded border-b border-gray-200" do >
  <table class="table min-w-full bg-white tablesorter" id = "myTable">
  <div id = "form">
    <thead class="sticky top-0 bg-[#50AE26] text-white" >
      <tr data-controller="sort">
        <th  id="players-name" class="bg-[#50AE26] sticky top-0 text-left py-3 px-2 uppercase font-semibold text-sm hover:cursor-pointer">
          <%= link_to "Name", sort: "name", query_seasons: params[:query_seasons], order: sortable%>
        </th>
        <th id="players-seasons" class="bg-[#50AE26] sticky top-0 text-left py-3 px-2 uppercase font-semibold text-sm hover:cursor-pointer">
          <%= link_to "Seasons", sort: "seasons.count", query_seasons: params[:query_seasons], order: sortable%>
        </th>
        <th id="players-games" class="bg-[#50AE26] sticky top-0 text-left py-3 px-2 uppercase font-semibold text-sm hover:cursor-pointer">
          <%= link_to "G", sort: "stats.games", query_seasons: params[:query_seasons], order: sortable%>
        </th>
        <th id="players-atbats" class="bg-[#50AE26] sticky top-0 text-left py-3 px-2 uppercase font-semibold text-sm hover:cursor-pointer">
          <%= link_to "AB", sort: "atbat", query_seasons: params[:query_seasons], order: sortable%>
        </th>
        <th id="players-hits" class="bg-[#50AE26] sticky top-0 text-left py-3 px-2 uppercase font-semibold text-sm hover:cursor-pointer">
          <%= link_to "H", sort: "hits", query_seasons: params[:query_seasons], order: sortable%>
        </th>
        <th id="players-runs" class="bg-[#50AE26] sticky top-0 text-left py-3 px-2 uppercase font-semibold text-sm hover:cursor-pointer">
          <%= link_to "R", sort: "runs", query_seasons: params[:query_seasons], order: sortable%>
        </th>
        <th id="players-single" class="bg-[#50AE26] sticky top-0 text-left py-3 px-2 uppercase font-semibold text-sm hover:cursor-pointer">
          <%= link_to "1B", sort: "singles", query_seasons: params[:query_seasons], order: sortable%>
        </th>
        <th id="players-double" class="bg-[#50AE26] sticky top-0 text-left py-3 px-2 uppercase font-semibold text-sm hover:cursor-pointer">
          <%= link_to "2B", sort: "doubles", query_seasons: params[:query_seasons], order: sortable%>
        </th>
        <th id="players-triple" class="bg-[#50AE26] sticky top-0 text-left py-3 px-2 uppercase font-semibold text-sm hover:cursor-pointer">
          <%= link_to "3B", sort: "triples", query_seasons: params[:query_seasons], order: sortable%>
        </th>
        <th id="players-homeruns" class="bg-[#50AE26] sticky top-0 text-left py-3 px-2 uppercase font-semibold text-sm hover:cursor-pointer">
          <%= link_to "HR", sort: "homeruns", query_seasons: params[:query_seasons], order: sortable%>
        </th>
        <th id="players-rbi" class="bg-[#50AE26] sticky top-0 text-left py-3 px-2 uppercase font-semibold text-sm hover:cursor-pointer">
          <%= link_to "RBI", sort: "rbi", query_seasons: params[:query_seasons], order: sortable%>
        </th>
        <th id="players-k" class="bg-[#50AE26] sticky top-0 text-left py-3 px-2 uppercase font-semibold text-sm hover:cursor-pointer">
          <%= link_to "TB", sort: "tb", query_seasons: params[:query_seasons], order: sortable%>
        </th>
        <th id="players-k" class="bg-[#50AE26] sticky top-0 text-left py-3 px-2 uppercase font-semibold text-sm hover:cursor-pointer">
          <%= link_to "K", sort: "k", query_seasons: params[:query_seasons], order: sortable%>
        </th>
        <th id="players-sac" class="bg-[#50AE26] sticky top-0 text-left py-3 px-2 uppercase font-semibold text-sm hover:cursor-pointer">
          <%= link_to "SAC", sort: "sac", query_seasons: params[:query_seasons], order: sortable%>
        </th>
        <th id="players-gwrbi" class="bg-[#50AE26] sticky top-0 text-left py-3 px-2 uppercase font-semibold text-sm hover:cursor-pointer">
          <%= link_to "GW", sort: "gwrbi", query_seasons: params[:query_seasons], order: sortable%>
        </th>
        <th id="players-avg" class="bg-[#50AE26] sticky top-0 text-left py-3 px-2 uppercase font-semibold text-sm hover:cursor-pointer">
          <%= link_to "AVG", sort: "avg", query_seasons: params[:query_seasons], order: sortable%>
        </th>
        <th id="players-slg" class="bg-[#50AE26] sticky top-0 text-left py-3 px-2 uppercase font-semibold text-sm hover:cursor-pointer">
          <%= link_to "SLG", sort: "slg", query_seasons: params[:query_seasons], order: sortable%>
        </th>
        <th id="players-obp" class="bg-[#50AE26] sticky top-0 text-left py-3 px-2 uppercase font-semibold text-sm hover:cursor-pointer">
          <%= link_to "OBP", sort: "obp", query_seasons: params[:query_seasons], order: sortable%>
        </th>
        <th id="players-obp" class="bg-[#50AE26] sticky top-0 text-left py-3 px-2 uppercase font-semibold text-sm hover:cursor-pointer">
          <%= link_to "OPS", sort: "ops", query_seasons: params[:query_seasons], order: sortable%>
        </th>
      </tr>
    </thead>
    
    <tbody class="text-gray-700">
      <% @sorted.each do |player| %>
        <tr class = "hover:bg-gray-200">
          <td class="text-left py-1 px-2" id = "players_name"><%=link_to player.name, player_path(player) %></td>
          <td class="text-left py-1 px-2"><%= player.seasons.count %></td>
          <td class="text-left py-1 px-2"><%= player.stats.sum(:games) %></td>
          <td class="text-left py-1 px-2"><%= player.stats.sum(:atbat) %></td>
          <td class="text-left py-1 px-2"><%= player.stats.sum(:hits) %></td>
          <td class="text-left py-1 px-2"><%= player.stats.sum(:runs) %></td>
          <td class="text-left py-1 px-2"><%= player.stats.sum(:singles) %></td>
          <td class="text-left py-1 px-2"><%= player.stats.sum(:doubles) %></td>
          <td class="text-left py-1 px-2"><%= player.stats.sum(:triples) %></td>
          <td class="text-left py-1 px-2"><%= player.stats.sum(:homeruns) %></td>
          <td class="text-left py-1 px-2"><%= player.stats.sum(:rbi) %></td>
          <td class="text-left py-1 px-2"><%= player.stats.sum(:tb) %></td>
          <td class="text-left py-1 px-2"><%= player.stats.sum(:k) %></td>
          <td class="text-left py-1 px-2"><%= player.stats.sum(:sac) %></td>
          <td class="text-left py-1 px-2"><%= player.stats.sum(:gwrbi) %></td>
          <td class="text-left py-1 px-2"><%= average(player).to_s %></td>
          <td class="text-left py-1 px-2"><%= slugging(player).to_s %></td>
          <td class="text-left py-1 px-2"><%= onbase(player).to_s %></td>
          <td class="text-left py-1 px-2"><%= ops(player).to_s %></td>
        </tr>
        
      <% end %>
    </tbody>
  </table>
</div>
</div>

