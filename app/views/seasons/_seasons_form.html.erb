<%= form_with url: seasons_path, method: :get, class: "d-flex pb-2", data: {"turbo": false} do %>
      <label for="Year">Year</label>
      
      
      
      <div class="relative inline-flex self-center">
       
      <select name="years" id="years" class="font-medium rounded border-2 border-[#50AE26] text-gray-600 h-7 w-20 pl-3 pr-3 mx-3 bg-white hover:border-gray-400 focus:outline-none appearance-none after:outline-none">
  <% Season.distinct.order(year: :asc).pluck(:year).each do |year| %>
    <option value="<%= year %>" <%= 'selected' if params[:years] == year.to_s %>><%= year %></option>
  <% end %>
</select>
      <%= submit_tag "Search", class: "mx-3 px-2 border-1 bg-[#50AE26] border-gray-800 hover:bg-gray-600 text-white"%>
  <% end %>